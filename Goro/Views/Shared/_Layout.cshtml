<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="header">
        <div id="goro-header-logo">
            <a href="/home/index" class="goro-header-link">
                <img src="~/Content/images/logo-brand-goro-text-white.svg"/>
            </a>
        </div>
        <div id="middle-navigation">
            <ul>
                <li>Product</li>
                <li>Platform</li>
                <li>Solutions</li>
                <li>Resources</li>
                <li>Company</li>
            </ul>
        </div>
        <div id="right-navigation">
            <div class="sign-in">Sign In</div>
            <div class="buy">Buy</div>
            <div class="watch-demo">Watch Demo</div>
        </div>
    </div>
    <div class="body">
        @RenderBody()
    </div>
    <div class="footer">
        @DateTime.Now.Year
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
